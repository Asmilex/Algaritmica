###############################################################################
# makefile
###############################################################################

SRC = $(wildcard *.c *.cc *cpp)
EXE = $(basename $(SRC))

CFLAGS = -std=c11 -Wall
CXXFLAGS = $(CFLAGS:c11=c++14)

###############################################################################

default: $(EXE)

all: default

clean:
	-rm -fv $(EXE) core.* *~

###############################################################################

.PHONY: all clean default
.NOEXPORT:

###############################################################################
